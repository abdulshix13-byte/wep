HTML

<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>Satranç Tahtası</title>
</head>
<body>

  <h2>14. Uygulama</h2>
  <p>İç içe for döngüsü kullanarak satranç tahtası oluşturma</p>

  <button onclick="olustur()">Tahtayı Oluştur</button>

  <div id="tahta"></div>

</body>
</html>

CSS

body {
  font-family: Arial;
  padding: 20px;
}

#tahta {
  margin-top: 20px;
  display: grid;
  grid-template-columns: repeat(8, 50px);
  width: 400px;
}

.kare {
  width: 50px;
  height: 50px;
}

.siyah {
  background-color: black;
}

.beyaz {
  background-color: white;
  border: 1px solid #ccc;
}

JS

function olustur() {
  let tahta = document.getElementById("tahta");
  tahta.innerHTML = "";

  for (let satir = 0; satir < 8; satir++) {
    for (let sutun = 0; sutun < 8; sutun++) {

      let kare = document.createElement("div");
      kare.classList.add("kare");

      // Siyah-beyaz kontrolü
      if ((satir + sutun) % 2 == 0) {
        kare.classList.add("beyaz");
      } else {
        kare.classList.add("siyah");
      }

      tahta.appendChild(kare);
    }
  }
}
