JS

function translate() {
  const dictionary = {
    computer: "bilgisayar",
    book: "kitap",
    car: "araba",
    house: "ev",
    school: "okul",
    phone: "telefon"
  };

  let word = document.getElementById("inputWord").value.toLowerCase();
  let output = document.getElementById("output");

  if (dictionary[word]) {
    output.textContent = dictionary[word];
  } else {
    output.textContent = "Kelime bulunamadı!";
  }
}
