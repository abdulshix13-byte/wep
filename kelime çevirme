    <!-- 1. KUTU -->
    <div class="box">
      <div class="top">
        <input type="text" id="inputWord" placeholder="İngilizce Kelime">
        <button onclick="translate()">Çevir</button>
      </div>
      <div class="bottom">
        <strong>Kelimenin Türkçe Karşılığı</strong>
        <div id="output">...</div>
      </div>
      <div class="number">1</div>
    </div>

    <!-- 2. KUTU (Görseldeki örnek gibi sabit gösterim) -->
    <div class="box">
      <div class="top">
        <input type="text" value="computer" disabled>
        <button disabled>Çevir</button>
      </div>
      <div class="bottom">
