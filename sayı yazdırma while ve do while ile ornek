#sonuc {
  margin-top: 20px;
  white-space: pre-line;
}

JS

function yazdir() {
  let sonuc = document.getElementById("sonuc");
  sonuc.innerHTML = "";

  // WHILE → 0'dan 10'a kadar
  let i = 0;
  sonuc.innerHTML += "While (0'dan 10'a):\n";

  while (i <= 10) {
    sonuc.innerHTML += i + " ";
    i++;
  }

  sonuc.innerHTML += "\n\n";

  // DO-WHILE → 10'dan 0'a kadar
  let j = 10;
  sonuc.innerHTML += "Do-While (10'dan 0'a):\n";

  do {
    sonuc.innerHTML += j + " ";
    j--;
  } while (j >= 0);
}
