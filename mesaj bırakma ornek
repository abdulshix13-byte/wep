JS

unction mesajEkle() {
  let input = document.getElementById("mesajInput");
  let mesaj = input.value.trim();

  if (mesaj === "") {
    alert("Lütfen mesaj giriniz!");
    return;
  }

  let saat = new Date();
  let saatStr =
    saat.getHours().toString().padStart(2, "0") + ":" +
    saat.getMinutes().toString().padStart(2, "0");

  let mesajDiv = document.createElement("div");
  mesajDiv.className = "mesaj";
  mesajDiv.innerHTML = `
    <span>${mesaj}</span>
    <span class="saat">${saatStr}</span>
  `;

  document.getElementById("mesajAlani").appendChild(mesajDiv);

  input.value = "";
}
document.getElementById("mesajInput")
  .addEventListener("keypress", function(e) {
    if (e.key === "Enter") {
      mesajEkle();
    }
});

