  text-align: center;
  margin-top: 15px;
  font-weight: bold;
}

JS

function increase(index) {
  let counter = document.getElementById("counter" + index);
  counter.textContent = parseInt(counter.textContent) + 1;
}

function decrease(index) {
  let counter = document.getElementById("counter" + index);
  counter.textContent = parseInt(counter.textContent) - 1;
}
